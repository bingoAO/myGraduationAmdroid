<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
   >

    <com.example.companyuo.CircleView
        android:id="@+id/healer_avater"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/dola"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/healer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:singleLine="true"
            android:layout_marginTop="3dp"
            android:textSize="@dimen/middle"/>
        <TextView
            android:id="@+id/work_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="workplace"
            android:layout_marginTop="3dp"
            android:textSize="@dimen/small"/>
        <TextView
            android:id="@+id/other_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "other tab"
            android:layout_marginTop="3dp"
            android:textSize="@dimen/small"
            android:maxLines="1"/>
    </LinearLayout>

</LinearLayout>